html body 
    height 100%
    
.body
    padding-top 70px
    
.user-info
    padding-right 5px
    
h1
    color green

h2
    color green

h3
    color green
    
.gold
    color #C90
    
.silver
    color grey
    
.bronze
    color #6E3A07
    
.card
    width 150px
    height 160px
    background-color rgba(0, 0, 0, 0.47)
    margin 0.5% 0.5%
    
/*Roster*/
.rosterlist
    height 40%
    overflow-y auto
    position fixed
    width 90%
    
/*Messages*/
.friends
    height 100%
    min-height 100%
    background-color #222222
    position fixed
    padding-right 1px
    padding-left 0px
    
.listfriends
    padding-right 0px
    padding-left 0px

.conversation
    height 100%
    min-height 100%
    float right
    background-color white
    position fixed
    margin-left 25%
    
.fill
    min-height 100%
    height 100%
    margin-top -20px

.fixed
    position fixed

.messages
    height 75%
    overflow-y auto
    
.input-msg
    float bottom
    
.li-right
    float right
    
.li-center
    margin-right 10%
    
.conv-item
    background transparent
    border 0px
    
.emisor
    text-align right
    
.receptor
    text-align left
    
.emisor-text
    padding 11px
    background #D1D1F3
    border-radius 10px
    
.receptor-text
    padding 11px
    background white
    border-radius 10px
    
.messages
    background rgba(19, 40, 101, 0.43)
    border-radius 10px
    padding 10px
    
@media (max-width: 767px)
    .con-resp
        width 75%